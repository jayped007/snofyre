<?xml version="1.0" encoding="UTF-8"?>  
<shortcuts>
    <skipIfNotSupported />
    <programGroup defaultName="${application.name}" location="applications||startMenu" />

    <!-- Shortcut for ${application.name} application -->
    <shortcut name="Start ${application.name}" target="$INSTALL_PATH\bin\run.bat" workingDirectory="$INSTALL_PATH\bin"
              description="Launches ${application.name}"
              initialState="noShow" programGroup="yes" desktop="yes" applications="no" startMenu="yes" startup="no">
    </shortcut>

    <!-- Shortcut for uninstall -->
    <shortcut name="Uninstall ${application.name}" target="$INSTALL_PATH\Uninstaller\${application.name}-Uninstaller.jar"
              workingDirectory="$INSTALL_PATH\Uninstaller" description="Uninstaller for ${application.name}"
              initialState="noShow" programGroup="yes" desktop="no" applications="no" startMenu="no"
              startup="no">
    </shortcut>

    <!-- Shortcut for configuration documentation -->
    <shortcut name="Configuration Manual" target="$INSTALL_PATH\docs\${sappheiros.configuration.guide.name}"
              workingDirectory="$INSTALL_PATH\docs" description="Configuration Manual for ${application.name}"
              initialState="noShow" programGroup="yes" desktop="no" applications="no" startMenu="no"
              startup="no">
    </shortcut>
</shortcuts>