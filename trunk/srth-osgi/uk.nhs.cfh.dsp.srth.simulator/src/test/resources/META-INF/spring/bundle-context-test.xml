<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <!-- regular spring configuration file defining the beans for this
bundle. We've kept the osgi definitions in a separate
configuration file so that this file can easily be used
for integration testing outside of an OSGi environment -->

    <bean id="sctPropertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>META-INF/spring/fakedata-db.properties</value>
                <value>META-INF/spring/snomed-db.properties</value>
            </list>
        </property>
        <property name="fileEncoding" value="utf-8"/>
        <property name="searchSystemEnvironment" value="true"/>
    </bean>

    <bean id="testSnomedDataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="${sjdbc.driverClassName}"/>
        <property name="url" value="${sjdbc.url}"/>
        <property name="username" value="${sjdbc.username}"/>
        <property name="password" value="${sjdbc.password}"/>
    </bean>

    <bean id="testTerminologyDAO" class="uk.nhs.cfh.dsp.snomed.dao.impl.SnomedConceptDatabaseDAO">
        <constructor-arg index="0" ref="testSnomedDataSource"/>
    </bean>

    <bean id="testHumanReadableRenderer" class="uk.nhs.cfh.dsp.snomed.converters.human.readable.impl.HumanReadableRendererImpl"/>
    <bean id="testExpressionXMLConverter" class="uk.nhs.cfh.dsp.snomed.converters.xml.impl.ExpressionXMLConverterImpl"/>

    <bean id="testExpressionComparator"
          class="uk.nhs.cfh.dsp.snomed.expression.comparator.impl.UnidirectionalExpressionComparatorImpl">
        <constructor-arg  index="0" ref="testSnomedDataSource"/>
        <constructor-arg index="1" ref="testTerminologyDAO"/>
    </bean>

    <bean id="testNormalFormHierarchyProvider" class="uk.nhs.cfh.dsp.snomed.hierarchyprovider.impl.NormalFormHierarchyProviderImpl"
          init-method="initialiseStatements"
          depends-on="testSnomedDataSource">
        <property name="schemaName" value="${snomed.schema.name}"/>
        <property name="relationshipTableName" value="${relationship.table.name}"/>
        <property name="attributeName" value="${attribute.name}"/>
        <property name="attributeValue" value="${attribute.value}"/>
        <property name="sourceColumnName" value="${source.column.name}"/>
        <property name="targetColumnName" value="${target.column.name}"/>
        <property name="tcTableName" value="${tc.table.name}"/>
        <property name="subTypeColumnName" value="${tc.subtype.column.name}"/>
        <property name="superTypeColumnName" value="${tc.supertype.column.name}"/>
        <property name="conceptTableName" value="${concept.table.name}"/>
        <property name="conceptIdColumnName" value="${concept.id.column.name}"/>
        <property name="conceptIsPrimitiveColumnName" value="${concept.isprimitive.column.name}"/>
        <constructor-arg index="0" ref="testSnomedDataSource"/>
        <constructor-arg index="1" ref="testTerminologyDAO"/>
    </bean>

    <bean id="testNormalFormGenerator"
          class="uk.nhs.cfh.dsp.snomed.normaliser.impl.NormalFormGeneratorImpl">
        <property name="expressionComparator" ref="testExpressionComparator"/>
        <property name="normalFormHierarchyProvider" ref="testNormalFormHierarchyProvider"/>
        <property name="terminologyConceptDAO" ref="testTerminologyDAO"/>
    </bean>

    <bean id="testSituationExpressionGenerator"
          class="uk.nhs.cfh.dsp.snomed.expressiongenerator.impl.SituationExpressionGeneratorImpl"
          init-method="initialiseParentConcepts">
        <property name="terminologyConceptDAO" ref="testTerminologyDAO"/>
    </bean>

    <bean id="testEntityFactoryService" class="uk.nhs.cfh.dsp.srth.information.model.impl.internal.ClinicalEntityFactoryImpl">
        <property name="humanReadableRender" ref="testHumanReadableRenderer"/>
        <property name="normalFormGenerator" ref="testNormalFormGenerator"/>
        <property name="situationExpressionGenerator" ref="testSituationExpressionGenerator"/>
    </bean>

    <bean id="testEntryFactoryService"
          class="uk.nhs.cfh.dsp.srth.information.model.impl.internal.ClinicalEntryFactoryImpl">
        <property name="entityFactory" ref="testEntityFactoryService"/>
    </bean>

    <bean id="testEhrFactoryService" class="uk.nhs.cfh.dsp.srth.information.model.impl.internal.EHRFactoryImpl"/>

    <bean id="testRandomSubtypeHierarchyProvider" class="uk.nhs.cfh.dsp.snomed.hierarchyprovider.impl.RandomSubtypeHierarchyProviderImpl"
            init-method="initialiseStatements">
        <property name="schemaName" value="${snomed.schema.name}"/>
        <property name="relationshipTableName" value="${relationship.table.name}"/>
        <property name="attributeName" value="${attribute.name}"/>
        <property name="attributeValue" value="${attribute.value}"/>
        <property name="sourceColumnName" value="${source.column.name}"/>
        <property name="targetColumnName" value="${target.column.name}"/>
        <property name="tcTableName" value="${tc.table.name}"/>
        <property name="subTypeColumnName" value="${tc.subtype.column.name}"/>
        <property name="superTypeColumnName" value="${tc.supertype.column.name}"/>
        <property name="dataSource" ref="testSnomedDataSource"/>
    </bean>

    <bean id="testDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="testSessionFactory" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="testDataSource"/>
        <property name="annotatedClasses">
            <list>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.EHRImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.AbstractBoundClinicalEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.AbstractBoundClinicalEventEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.AbstractClinicalObservationEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.ClinicalActivityEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.ClinicalFeatureEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.ClinicalFindingEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.MedicationEventEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.InterventionEventEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.ehr.entry.InvestigationEventEntry</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractBoundClinicalEntity</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractBoundClinicalEvent</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractClinicalActivityEntity</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractClinicalEntity</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractClinicalEvent</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AbstractClinicalObservationEntity</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.AnatomicalLocationEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.ClinicalExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.ClinicalFeatureEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.ClinicalFindingEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.MedicationEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.InterventionEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.information.model.impl.om.clinical.entity.InvestigationEntityImpl</value>
                <value>uk.nhs.cfh.dsp.srth.demographics.person.impl.AbstractPerson</value>
                <value>uk.nhs.cfh.dsp.srth.demographics.person.impl.PatientImpl</value>
                <value>uk.nhs.cfh.dsp.srth.expression.repository.om.impl.ExpressionMappingObjectImpl</value>
                <value>uk.nhs.cfh.dsp.srth.expression.repository.om.impl.ExpressionSubsumptionRelationshipImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.AbstractTerminologyConcept</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.AbstractTerminologyRelationship</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.SnomedAttributeImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.SnomedConceptImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.SnomedDescriptionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.SnomedRelationshipImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.impl.SnomedRoleGroupImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.AbstractExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.AbstractExpressionWithFocusConcepts</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.AbstractPropertyExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.AbstractPropertyImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.CloseToUserExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.ConceptExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.IntersectionExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.NormalFormExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.PropertyExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.SnomedRelationshipProperty</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.SnomedRelationshipPropertyExpression</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.SnomedRoleGroupProperty</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.SnomedRelationshipPropertyExpression</value>
                <value>uk.nhs.cfh.dsp.snomed.expression.model.impl.UnionExpressionImpl</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.ConceptType</value>
                <value>uk.nhs.cfh.dsp.snomed.objectmodel.ComponentStatus</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                <prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
                <prop key="hibernate.jdbc.batch_size">${hibernate.jdbc.batch_size}</prop>
            </props>
        </property>
    </bean>

    <bean id="testPatientDAO" class="uk.nhs.cfh.dsp.srth.demographics.impl.PatientDAOImpl">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="testPropertyChangeTrackerService" class="uk.nhs.cfh.dsp.srth.desktop.modularframework.impl.PropertyChangeTrackerServiceImpl"/>

    <bean id="testPatientUtilsService" class="uk.nhs.cfh.dsp.srth.demographics.person.utils.PatientUtilsServiceImpl"/>

    <bean id="testRandomSubtypeGenerator" class="uk.nhs.cfh.dsp.srth.simulator.utils.impl.RandomSubtypeGeneratorImpl">
        <property name="hierarchyProvider" ref="testRandomSubtypeHierarchyProvider"/>
        <property name="normalFormGenerator" ref="testNormalFormGenerator"/>
        <property name="terminologyConceptDAO" ref="testTerminologyDAO"/>
        <property name="useNormalFormForRendering" value="false"/>
    </bean>

    <bean id="testExpressionMappingObjectDAO" class="uk.nhs.cfh.dsp.srth.expression.repository.impl.ExpressionMappingObjectDAOImpl">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="testExpressionSubsumptionRelationshipDAO"
          class="uk.nhs.cfh.dsp.srth.expression.repository.impl.ExpressionSubsumptionRelationshipDAOImpl">
        <property name="sessionFactory" ref="testSessionFactory"/>
    </bean>

    <bean id="queryService" class="uk.nhs.cfh.dsp.srth.query.service.impl.QueryServiceImpl"/>

    <bean id="testDataGenerationEngine" class="uk.nhs.cfh.dsp.srth.simulator.engine.impl.QueryBasedDataGenerationEngineImpl">
        <constructor-arg ref="queryService"/>

        <property name="clinicalEntryFactory" ref="testEntryFactoryService"/>
        <property name="terminologyConceptDAO" ref="testTerminologyDAO"/>
        <property name="patientDAO" ref="testPatientDAO"/>
        <property name="patientUtilsService" ref="testPatientUtilsService"/>
        <property name="propertyChangeTrackerService" ref="testPropertyChangeTrackerService"/>
        <property name="ehrFactory" ref="testEhrFactoryService"/>
        <property name="randomSubtypeGenerator" ref="testRandomSubtypeGenerator"/>
        <property name="expressionMappingObjectDAO" ref="testExpressionMappingObjectDAO"/>
        <property name="expressionSubsumptionRelationshipDAO" ref="testExpressionSubsumptionRelationshipDAO"/>

    </bean>
</beans>
