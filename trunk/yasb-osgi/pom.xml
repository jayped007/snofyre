    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>1.4</version>
                <configuration>
                    <!--
                     | some example Pax-Runner settings
                    -->
                    <provision>
                        <param>--platform=equinox</param>
                        <param>--bootDelegation=*</param>
                    </provision>
                </configuration>
                <executions>
                    <!--
                     | uncomment to auto-generate IDE files
                    <execution>
                      <id>ide-support</id>
                      <goals>
                        <goal>eclipse</goal>
                      </goals>
                    </execution>
                    -->
                </executions>
            </plugin>
            <!-- Add the maven release plugin -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.1</version>
                <configuration>
                    <tagBase>https://snofyre.googlecode.com/svn/tags/yasb-osgi</tagBase>
                </configuration>
            </plugin>
            <plugin>
                <inherited>false</inherited>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>1.9.0</version>
                <configuration>
                    <header>${basedir}/src/etc/header.txt</header>
                    <failIfMissing>true</failIfMissing>
                    <aggregate>true</aggregate>
                    <properties>
                        <year>${project.inceptionYear} - 2011</year>
                    </properties>
                    <useDefaultExcludes>true</useDefaultExcludes>
                    <failIfMissing>false</failIfMissing>
                    <strictCheck>true</strictCheck>
                    <excludes>
                        <exclude>LICENSE.txt</exclude>
                        <exclude>**/src/test/resources/**</exclude>
                        <exclude>**/src/test/data/**</exclude>
                        <exclude>target/**</exclude>
                        <exclude>**/queries/*.xml</exclude>
                        <exclude>.idea/**</exclude>
                        <exclude>**/**/osgi.bnd</exclude>
                        <exclude>**/**/readme.txt</exclude>
                        <exclude>**/**/README.TXT</exclude>
                        <exclude>**/**/LICENSE.TXT</exclude>
                        <exclude>**/**/FINISH.TXT</exclude>
                        <exclude>**/**/config.ini</exclude>
                        <exclude>**/**/*.properties</exclude>
                        <exclude>**/**/*.html</exclude>
                        <exclude>**/**/*.plist</exclude>
                        <exclude>**/**/*.icns</exclude>
                        <exclude>**/**/*.log</exclude>
                        <exclude>**/**/*.g</exclude>
                        <exclude>**/**/*.bat</exclude>
                        <exclude>**/**/*.sh</exclude>
                        <exclude>**/**/*.releaseBackup</exclude>
                        <exclude>**/**/*.xml_eng</exclude>
                        <exclude>**/**/*.hgignore</exclude>
                        <exclude>**/**/*.hgtags</exclude>
                        <exclude>**/**/atlassian-ide-plugin.xml</exclude>
                        <exclude>**/**/JavaApplicationStub</exclude>
                        <exclude>**/**/PkgInfo</exclude>
                        <exclude>**/**/bundle-context.xml</exclude>
                        <exclude>**/**/bundle-context-osgi.xml</exclude>
                    </excludes>
                </configuration>
                <executions>
                    <execution>
                        <id>check-headers</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

